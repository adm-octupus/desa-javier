<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_out_invoice_tree_inherit_remission" model="ir.ui.view">
        <field name="name">account.move.out.tree.inherit.remission</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="l10n_ec_ott_remission_guide_number" 
                       string="Remission Guide"
                       readonly="1" 
                       optional="hide"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_move_filter_remission" model="ir.ui.view">
        <field name="name">account.move.search.remission.guide</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            
            <xpath expr="//search" position="inside">
                <field name="l10n_ec_ott_remission_guide_number" string="Guía de Remisión"/>
            </xpath>
            
            <xpath expr="//filter[@name='late']" position="after">
                <separator/>
                <filter name="filter_with_remission_guide" 
                        string="With Remission Guide" 
                        domain="[('l10n_ec_ott_remission_guide_number', '!=', False)]"/>
                <filter name="filter_without_remission_guide" 
                        string="Without Remission Guide" 
                        domain="[('l10n_ec_ott_remission_guide_number', '=', False)]"/>
            </xpath>
            
            <xpath expr="//filter[@name='group_by_sequence_prefix']" position="before">
                <filter string="Remission Guide" 
                        name="group_by_remission_guide" 
                        context="{'group_by': 'l10n_ec_ott_remission_guide_number'}"/>
            </xpath>
            
        </field>
    </record>

</odoo>