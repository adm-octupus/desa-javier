<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_lch_hr_structure_analytics_tree" model="ir.ui.view">
    <field name="name">lch.hr.structure.analytics.tree</field>
    <field name="model">lch.hr.structure.analytics</field>
    <field name="arch" type="xml">
      <tree string="Automation Analytic Configurations" editable="bottom">
        <field name="department_id"/>
        <field name="structure_type_id"/>
        <field name="analytic_distribution" widget="analytic_distribution"/>
        <button name="action_apply_to_contracts"
              type="object"
              string="Apply to contracts"
              class="oe_highlight"/>
        <field name="company_id" optional="hide" readonly="1" domain="[('id','in', allowed_company_ids)]"/>
      </tree>
    </field>
  </record>
  <record id="view_lch_hr_structure_analytics_form" model="ir.ui.view">
    <field name="name">lch.hr.structure.analytics.form</field>
    <field name="model">lch.hr.structure.analytics</field>
    <field name="arch" type="xml">
      <form string="Automation Analytic Configurations">
        <sheet>
          <group>
            <field name="department_id"/>
            <field name="structure_type_id"/>
          </group>
          <group>
            <field name="analytic_distribution" widget="analytic_distribution"/>
            <field name="company_id" domain="[('id','in', allowed_company_ids)]"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
  <record id="view_lch_hr_structure_analytics_search" model="ir.ui.view">
    <field name="name">lch.hr.structure.analytics.search</field>
    <field name="model">lch.hr.structure.analytics</field>
    <field name="arch" type="xml">
      <search string="Automation Analytic Configurations">
        <field name="department_id"/>
        <field name="structure_type_id"/>
        <field name="company_id"/>
        <separator/>
        <group>  
          <filter string="Department" name="department_id" context="{'group_by':'department_id'}"/>
          <filter string="Structure Type" name="structure_type_id" context="{'group_by':'structure_type_id'}"/>
          <filter string="Company" name="company_id" context="{'group_by': 'company_id'}"/> 
        </group>
      </search>
    </field>
  </record>
  <record id="action_lch_hr_structure_analytics_apply_to_contracts" model="ir.actions.server">
      <field name="name">Apply to Contracts</field>
      <field name="type">ir.actions.server</field>
      <field name="model_id" ref="model_lch_hr_structure_analytics"/>
      <field name="binding_model_id" ref="model_lch_hr_structure_analytics"/>
      <field name="state">code</field>
      <field name="code">
          records.action_apply_to_contracts()
      </field>
  </record>
  <record id="action_lch_hr_structure_analytics" model="ir.actions.act_window">
    <field name="name">Automation Analytic</field>
    <field name="res_model">lch.hr.structure.analytics</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{}</field>
    <!-- <field name="search_view_id" ref="view_lch_hr_structure_analytics_search"/> -->
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Create analytical distribution configurations by Company, Department and Structure..
      </p>
    </field>
  </record>
</odoo>
